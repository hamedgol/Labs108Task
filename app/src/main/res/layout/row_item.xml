<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal">

    <ImageView android:id="@+id/posterpath"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/adult"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/overview"
        android:layout_width="275dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:includeFontPadding="false"
        android:scrollbars="vertical"
        android:scrollHorizontally="false" />

    <TextView android:id="@+id/releasedate"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/genreid"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/originaltitle"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/originallanguage"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/titleT"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <ImageView android:id="@+id/backdropath"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/popularity"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/votecount"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/video"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>

    <TextView android:id="@+id/voteaverage"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="horizontal"/>
</LinearLayout>